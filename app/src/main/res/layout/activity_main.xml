<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:src="@drawable/ic_main_starting_page"
        android:transitionName="splash_image" />

    <!--for transition animation we need to add -->
    <!--    <style -->
    <!--        ...-->
    <!--    <item name="android:windowContentTransitions">true</item>-->
    <!--</style>-->
    <!--in the styles.xml file-->

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_image"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_bold"
        android:letterSpacing=".05"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Witkids"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        android:transitionName="app_name" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/app_name"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:background="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:fontFamily="@font/open_sans"
        android:gravity="center_horizontal"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:text="An interactive platform to explore the beauty of mathematical and logical problem solving"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/open_sans"
        android:letterSpacing=".2"
        android:text="www.witkids.com"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>